{
  "name": "pranx",
  "version": "0.0.14",
  "description": "The next of preact. A light-weight, Next.js-like framework with Preact, Hono, and esbuild for static site generation and hydration.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsx ./scripts/build-project.ts && tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "biome lint . --fix --unsafe",
    "check": "tsc --noEmit -p ./tsconfig.json",
    "format": "prettier --write --cache \"./lib\" \"./examples\"",
    "make-vendors": "tsx ./scripts/make-vendors.ts",
    "prepublishOnly": "npm run build",
    "push": "npm version patch && git push",
    "push-minor": "npm version minor && git push",
    "push-major": "npm version major && git push"
  },
  "repository": "https://github.com/LiasCode/pranx",
  "bugs": "https://github.com/LiasCode/pranx/issues",
  "homepage": "https://github.com/LiasCode/pranx",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "tsconfig.json",
    "LICENSE"
  ],
  "keywords": [
    "preact",
    "next",
    "hono",
    "framework",
    "ssr",
    "ssg",
    "http",
    "efficient",
    "small"
  ],
  "author": {
    "name": "LiasCode",
    "email": "liascode.dev@gmail.com",
    "url": "https://lias-code.pages.dev"
  },
  "license": "MIT",
  "workspaces": [
    "./examples/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/fs-extra": "^11.0.4",
    "@types/html-minifier": "^4.0.5",
    "@types/node": "^20.19.1",
    "@vitest/coverage-v8": "3.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "simple-git-hooks": "^2.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zod": "^3.25.67"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@mdx-js/esbuild": "^3.1.0",
    "esbuild": "^0.25.5",
    "fs-extra": "^11.3.0",
    "hono": "^4.8.3",
    "html-minifier": "^4.0.0",
    "kleur": "^4.1.5",
    "preact": "^10.26.9",
    "preact-iso": "^2.9.2",
    "preact-render-to-string": "^6.5.13",
    "sass": "^1.89.2"
  }
}
